<h1>Thanks for adding a new restaurant</h1>
<%= simple_form_for [@restaurant] do |f| %>
  <%= f.input :name, placeholder: 'Name', error: 'Name is mandatory' %>
  <%= f.input :address, placeholder: 'Address' %>
  <%= f.input :category, placeholder: 'Category' %>
  <%= f.submit "add a restaurant", class: "btn btn-primary" %>
<% end %>

